  journal = {Journal of Ecology},
  author = {{Maron John L.} and {Baer Kathryn C.} and {Angert Amy L.} and {Lau Jennifer}},
  month = sep,
  year = {2014},
  pages = {1485-1496},
  file = {/home/david/Zotero/storage/F8SWSYYM/Maron John L. et al. - 2014 - Disentangling the drivers of context‐dependent pla.pdf;/home/david/Zotero/storage/VCTNXTTP/1365-2745.html}
