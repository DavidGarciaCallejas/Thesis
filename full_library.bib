  author = {Chalmandrier, Lo\"ic and Albouy, Camille and Descombes, Patrice and Sandel, Brody and Faurby, Soren and Svenning, Jens-Christian and Zimmermann, Niklaus E. and Pellissier, Lo\"ic},
