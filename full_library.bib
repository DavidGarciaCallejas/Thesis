  author = {Vellend, Mark and Srivastava, Diane S. and Anderson, Kathryn M. and Brown, Carissa D. and Jankowski, Jill E. and Kleynhans, Elizabeth J. and Kraft, Nathan J. B. and Letaw, Alathea D. and Macdonald, A. Andrew M. and Maclean, Janet E. and {Myers-Smith}, Isla H. and Norris, Andrea R. and Xue, Xinxin},
