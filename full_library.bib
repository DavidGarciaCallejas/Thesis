  month = sep,
  year = {2016},
  pages = {577-582},
  file = {/home/david/Zotero/storage/DAJQILIT/Miller and Bestelmeyer - 2016 - What's wrong with novel ecosystems, really.pdf;/home/david/Zotero/storage/XTGU8FRR/abstract.html}
}

@article{Newmark2017,
  title = {Targeted Habitat Restoration Can Reduce Extinction Rates in Fragmented Forests},
  volume = {114},
