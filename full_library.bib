  month = aug,
  year = {2012},
  pages = {929-941},
  file = {/home/david/Zotero/storage/XNMMPUUN/Jackson and Fahrig - 2012 - What size is a biologically relevant landscape.pdf;/home/david/Zotero/storage/ZQC2ZCZT/s10980-012-9757-9.html}
}

@article{LiaoJinbao2017,
  title = {Diverse Responses of Species to Landscape Fragmentation in a Simple Food Chain},
